{
	"compilerOptions": {
		"baseUrl": "node_modules/@types",
		"typeRoots": ["node_modules/@types"],
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"lib": ["es6", "dom"],
		"module": "ES6",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "types",
		"target": "es2015"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
